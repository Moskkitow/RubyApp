<h1>Administradores</h1>
<body>
<% if @admin.errors.any? %>
    <% @admin.errors.full_messages.each do |message| %>
        <script>
            $.notify("<%= message %>")
        </script>
    <% end %>
<% end %>    
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <div class="panel-body">
        <%= form_for( [:backoffice, @admin] ) do |f| %>
            <div class="form-group">
                <label>Name</label>
                <%= f.text_field :email, class: "form-control", placeholder: "Enter Name" %>
            </div>
            <div class="form-group">
                <label>Email</label>
                <%= f.text_field :email, class: "form-control", placeholder: "Enter Email" %>
            </div>
            <% if policy(@admin).edit? %>
                <div class="form-group">
                    <label>Role</label>
                    <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b|  %> 
                        <div class="radio">
                            <%= b.label { b.radio_button + b.text } %>
                        </div>
                    <% end %>
                </div>
            <% end %>
            <div class="form-group">
                <label>Password</label>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
            </div>
            <div class="form-group">
                <label>Password Confirmation</label>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>   
        <% end %>           
    </div>
</div>
</body>
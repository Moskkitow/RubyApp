<h1>Editando Anuncios</h1>

<%= form_for([:site, :profile, @ad]) do |f| %>
    <div class="form-group col-md-6">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control", placeholder:"Titulo" %>
    </div>
    <div class="form-group col-md-6">
        <%= f.label :picture %>
        <%= image_tag @ad.picture(:medium), class: "img-thumbnail" %>
        <%= f.file_field :picture%>
    </div>
    <%= submit_tag "Atualizar", class:"btn btn-defuklt" %>
<% end %>
<h1>Listando Anúncios</h1>

<table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Imagem</th>
        <th scope="col">Titulo</th>
        <th scope="col">Categoria</th>
        <th scope="col">Preço</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <th scope="row"><%= ad.id %>></th>
          <td><%= image_tag ad.picture(:thumb) %>></td>
          <td><%= ad.title %></td>
          <td><%= ad.category.description %></td>
          <td><%= humanized_money_with_symbol ad,price %></td>
          <td>
            <%= link_to edit_site_profile_ad_path(ad), class: "btn btn-outline-dark" do %>
              <sgv-icon>
                <src href="svg/si-pen-nib.svg"></src>
              </sgv-icon>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
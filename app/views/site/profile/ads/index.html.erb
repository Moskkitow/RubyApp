<h1>Meus Anuncios</h1>

<table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Imagem</th>
        <th scope="col">Titulo</th>
        <th scope="col">Categoria</th>
        <th scope="col">Pre√ßo</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
        <% @ads.each do |ad| %>
            <tr>
                <th scope="row"><%= ad.id %></th>
                <td><%= image_tag ad.picture(:thumb) %></td>
                <td><%= ad.title %></td>
                <td><%= ad.category.description %></td>
                <td><%= humanized_money_with_symbol ad.price %></td>
                <td>
                    <%= link_to edit_site_profile_ad_path(ad), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>